{% extends '::admin_header.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <h1>Membres</h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-dashboard"></i> Liste des membres</li>
            </ol>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-file"></i> Liste des membres</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped tablesorter">
                            <thead>
                            <tr>

                                <th>Civilite</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Société</th>
                                <th>E-mail</th>
                                <th>Dernière connexion</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>

                                    <td>{{ entity.civilite }}</td>
                                    <td>{{ entity.username }}</td>
                                    <td>{{ entity.prenom }}</td>
                                    <td>{{ entity.societe }}</td>
                                    <td>{{ entity.email }}</td>
                                    <td>{{ entity.lastLogin|date('Y-m-d H:i:s')  }}</td>
                                    <td>
                                        <a href="{{ path('admin_groupemembre_show', { 'id': entity.id }) }}"><button class="btn btn-info"><i class="fa fa-eye"></i> Voir</button></a>
                                        <a href="{{ path('admin_groupemembre_edit', { 'id': entity.id }) }}"><button class="btn btn-warning"><i class="fa fa-pencil"></i> Editer</button></a>
                                        <a href="{{ path('admin_groupemembre_delete', { 'id': entity.id }) }}"><button class="btn btn-danger"><i class="fa fa-trash-o"></i> Supprimer</button></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-left">
                        <a href="{{ path('admin_membre_create') }}">
                            <button class="btn btn-success"><i class="fa fa-plus-circle"></i> Créer</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.row -->

{% endblock %}
