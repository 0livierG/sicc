{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="span12">
            <h2>Contact</h2>
        </div>

    </div>

    {% if app.session.flashbag.has('success') %}
        <div class="row-fluid">
            <div class="span12 alert alert-success">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    {{ flashMessage }}
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="span6" id="wrapper-contact-form">
            <form id="contact-form" action="{{ path('sicc_contact_envoi') }}" method="post" {{ form_enctype(form) }}>
                {{ form_start(form) }}
                {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_errors(form.nom) }}
                        {{ form_widget(form.nom) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.prenom) }}
                        {{ form_widget(form.prenom) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.civilite) }}
                        {{ form_widget(form.civilite) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.telephone) }}
                        {{ form_widget(form.telephone) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.objet) }}
                        {{ form_widget(form.objet) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.contenu) }}
                        {{ form_widget(form.contenu) }}
                    </div>

                {{ form_end(form) }}
            </form>
        </div>
        <div class="span6" id="wrapper-googlemaps">
            {% include 'SiccContactBundle:Email:googleMap.html.twig' %}
            <div wrapper-info-contact>
                <div class="info-contact"><i class="fa fa-map-marker"></i> 720 chemin de l'ESTALOT 33240 Saint-André-de-Cubzac ‎</div>
                <div class="info-contact"><i class="fa fa-phone"></i> 05 57 58 61 76</div>
                <div class="info-contact"><i class="fa fa-mobile-phone"></i> 06 12 57 01 82</div>
                <div class="info-contact"><i class="fa fa-envelope"></i> sicc33@orange.fr</div>
            </div>
        </div>


{% endblock %}
