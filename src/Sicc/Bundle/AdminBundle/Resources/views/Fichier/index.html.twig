    {% extends '::admin_header.html.twig' %}

    {% block body -%}
        <div class="row">
            <div class="col-lg-12">
                <h1>Fichiers</h1>
                <ol class="breadcrumb">
                    <li class="active"><i class="fa fa-dashboard"></i> Fichiers</li>
                </ol>
            </div>
        </div><!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-file"></i> Les Fichiers</h3>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped tablesorter">
                                <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Url</th>
                                    <th>Groupe(s) autorisé(s)</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td>{{ entity.titre }}</td>
                                        <td>{{ entity.url }}</td>
                                        <td>
                                            <ul>
                                                {% for groupe in entity.groupes %}
                                                    <li>{{ groupe.intitule }}</li>
                                                {% endfor %}
                                            </ul>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_fichier_show', { 'id': entity.id }) }}"><button class="btn btn-info"><i class="fa fa-eye"></i> Voir</button></a>
                                            <a href="{{ path('admin_fichier_edit', { 'id': entity.id }) }}"><button class="btn btn-warning"><i class="fa fa-pencil"></i> Editer</button></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="text-left">
                            <a href="{{ path('admin_fichier_create') }}">
                                <button class="btn btn-success"><i class="fa fa-plus-circle"></i> Créer</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.row -->
    {% endblock %}


