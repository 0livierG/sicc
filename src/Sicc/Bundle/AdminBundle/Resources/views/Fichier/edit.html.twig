{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <h1>Cr√©ation article</h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-dashboard"></i> Article</li>
            </ol>
        </div>
    </div><!-- /.row -->

    <div class="row">

        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        <div class="col-lg-1"></div>
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_label(edit_form.titre) }}
                {{ form_errors(edit_form.titre) }}
                {{ form_widget(edit_form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.description) }}
                {{ form_errors(edit_form.description) }}
                {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.url) }}
                {{ form_errors(edit_form.url) }}
                {{ form_widget(edit_form.url, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.groupes) }}
                {{ form_errors(edit_form.groupes) }}
                {{ form_widget(edit_form.groupes, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success'}}) }}
                <a class="btn btn-info" href="{{ path('admin_fichier') }}">
                    Retour liste
                </a>
            </div>
        </div>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
