{% extends '::admin_header.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <h1>Gestion Articles <small>Sicc.com</small></h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-dashboard"></i> Articles</li>
            </ol>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-money"></i></h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped tablesorter">
                            <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Description</th>
                                <th>Illustration</th>
                                <th>Voir</th>
                                <th>Editer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.titre }}</td>
                                    <td>{{ entity.description }}</td>
                                    <td><img class="td-img" src="{{ asset('img/article/'~entity.illustration) }}"/></td>
                                    <td><a href="{{ path('admin_article_show', { 'id': entity.id }) }}"><button class="btn btn-info">Voir</button></a></td>
                                    <td><a href="{{ path('admin_article_edit', { 'id': entity.id }) }}"><button class="btn btn-warning">Editer</button></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-left">
                        <a href="{{ path('admin_article_create') }}">
                            <button class="btn btn-success"><i class="fa fa-plus-circle"></i> Cr√©er</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.row -->

    {% endblock %}
