{% extends '::admin_header.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <h1>Articles</h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-dashboard"></i> Article</li>
            </ol>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-file"></i> Les articles</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped tablesorter">
                            <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Description</th>
                                <th>Illustration</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.titre }}</td>
                                    <td>{{ entity.description|length > 100 ? entity.description|slice(0, 100) ~ '...' : entity.description  }}</td>
                                    <td><img class="img_table_admin" src="{{ asset('img/articles/'~entity.illustration) }}"></td>
                                    <td>
                                        <a href="{{ path('admin_article_show', { 'id': entity.id }) }}"><button class="btn btn-info"><i class="fa fa-eye"></i> Voir</button></a>
                                        <a href="{{ path('admin_article_edit', { 'id': entity.id }) }}"><button class="btn btn-warning"><i class="fa fa-pencil"></i> Editer</button></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-left">
                        <a href="{{ path('admin_article_create') }}">
                            <button class="btn btn-success"><i class="fa fa-plus-circle"></i> Cr√©er</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.row -->
    {% endblock %}
