        </div>
    </div>

    <div class="col-lg-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-6 text-right">
                        <p class="announcement-heading">{{ nbr_member }}</p>
                        <p class="announcement-text">Les membres</p>
                    </div>
                </div>
            </div>
            <a href="{{ path('admin_user_index') }}">
