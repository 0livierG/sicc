{% extends '::admin_header.html.twig' %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1>Gestion contenu <small>Sicc.com</small></h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard"></i> Administration</li>
        </ol>
    </div>
</div><!-- /.row -->

<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
