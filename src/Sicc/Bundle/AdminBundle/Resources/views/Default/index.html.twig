{% extends '::admin_header.html.twig' %}

{% block body -%}
<div class="row">
    <div class="col-lg-12">
        <h1>Gestion contenu <small>Vintage-West.com</small></h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard"></i> Administration</li>
        </ol>
    </div>
</div><!-- /.row -->

<div class="row">
    <div class="col-lg-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <i class="fa fa-archive fa-5x"></i>
                    </div>
                    <div class="col-xs-6 text-right">
                        <p class="announcement-heading">{{ nbr_articles }}</p>
                        <p class="announcement-text">Les articles</p>
                    </div>
                </div>
            </div>
            <a href="{{ path('admin_article') }}">
                <div class="panel-footer announcement-bottom">
                    <div class="row">
                        <div class="col-xs-6">
                            Accéder aux articles
                        </div>
                        <div class="col-xs-6 text-right">
                            <i class="fa fa-arrow-circle-right"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <i class="fa fa-fire-extinguisher fa-5x"></i>
                    </div>
                    <div class="col-xs-6 text-right">
                        <p class="announcement-heading">{{ nbr_realisations }}</p>
                        <p class="announcement-text">Les réalisations</p>
                    </div>
                </div>
            </div>
            <a href="{{ path('admin_realisation') }}">
                <div class="panel-footer announcement-bottom">
                    <div class="row">
                        <div class="col-xs-7">
                            Accéder aux réalisations
                        </div>
                        <div class="col-xs-5 text-right">
                            <i class="fa fa-arrow-circle-right"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div><!-- /.row -->
{% endblock %}
