{% extends '::admin_header.html.twig' %}

{% block body -%}
    
    <div class="row">
        <div class="col-lg-12">
            <h1>Gestion Réalisation <small>Sicc.com</small></h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-dashboard"></i> Réalisations</li>
            </ol>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-money"></i></h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped tablesorter">
                            <thead>
                            <tr>

                                <th>Titre</th>
                                <th>Description</th>
                                <th>Illustration</th>
                                <th>Date</th>
                                <th>Commanditaire</th>
                                <th>Ville</th>
                                <th>Codepostal</th>
                                <th>Voir</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.titre }}</td>
                                    <td>{{ entity.description }}</td>
                                    <td ><img class="td-img" src="{{ asset('img/realisations/'~entity.illustration) }}"/></td>
                                    <td>{{ entity.date }}</td>
                                    <td>{{ entity.commanditaire }}</td>
                                    <td>{{ entity.ville }}</td>
                                    <td>{{ entity.codePostal }}</td>
                                    <td><button class="btn btn-info"><a href="{{ path('admin_realisation_show', { 'id': entity.id }) }}">Voir</a></button></td>
                                    <td><button class="btn btn-danger"><a href="{{ path('admin_realisation_edit', { 'id': entity.id }) }}">Editer</a></button></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-left">
                        <a href="{{ path('admin_realisation_create') }}">
                            <button class="btn btn-success"><i class="fa fa-plus-circle"></i> Créer</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.row -->

    {% endblock %}
